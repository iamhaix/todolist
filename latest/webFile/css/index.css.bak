@charset utf-8; 
#topbar{
	height:35px;
	background-color:#00cdff;
	border:1px solid #0a9ab7;
	-webkit-box-shadow: #afc1c8 0px 5px 5px;
	-moz-box-shadow: #afc1c8 0px 5px 5px;
	box-shadow: #afc1c8 0px 5px 5px;
	text-align: center;
}
#contentBar{
	width: 1000px;
	margin-right:auto;
	margin-left:auto;
	text-align:left;
	padding-top: 5px;
}

#contentBar ul li{
	display:inline;
    list-style:none;
    list-style-position:outside;
    text-align:center;
    font-weight:bold;
    /*float:left;*/
	height:35px;
	font-family:"微软雅黑", Arial;
}

#contentBar ul li.left{
	font-family: Trebuchet MS, Arial;;
	font-weight:bold;
	font-size: 28px;
}

#contentBar ul li.center{
	font-size: 14px;
	margin-left:380px;
}

#contentBar ul li.right{
	margin-left:100px;
	font-size: 16px;
}

#contentBar ul #login{
    margin-right:20px;
	width:3em;
}

.slideDiv{
    height:250px;
    background-color:#00cdff;
    border:1px solid #0a9ab7;
	-webkit-box-shadow: #afc1c8 0px 5px 5px;
	-moz-box-shadow: #afc1c8 0px 5px 5px;
	box-shadow: #afc1c8 0px 5px 5px;
	display:none;
}

#content{
	
	border-bottom:2px solid #000000;
	height:500px;
}

.bigFont{
	font-size:1.3em;
}

.close{
    text-align:right;
}

.close span{
    margin-top:40px;
    padding-right:100px; 
} 

.loginDiv {
height:200px;
text-align:center;
}
.loginDiv form{
	display:inline-block;
	width:220px;
	margin-top: 40px;
}

label{
display:inline-block;
width:50px;
text-align:left;
margin-top:10px;
}

.login {
width: 30%;
cursor: pointer;
background: #20BEFC;
padding: 1px 6px;
font-family: '微软雅黑','Arial Narrow',Arial,sans-serif;
color: #000;
font-size: 20px;
text-align: center;
border: 1px solid #1C6C7A;
margin: 10px;
text-shadow: 0 1px 1px rgba(0, 0, 0, 0.5);
-webkit-border-radius: 3px;
-moz-border-radius: 3px;
border-radius: 3px;
-webkit-box-shadow: 0px 1px 2px 2px rgba(0, 0, 0, 0.07) inset,
 0px 0px 0px 1px #FEFEFE,
 0px 1px 1px 1px #D2D2D2;
-moz-box-shadow: 0px 1px 2px 2px rgba(0, 0, 0, 0.07) inset,
 0px 0px 0px 1px rgb(254, 254, 254),
 0px 1px 1px 1px rgb(210, 210, 210);
box-shadow: 0px 1px 2px 2px rgba(0, 0, 0, 0.07) inset,
 0px 0px 0px 1px #FEFEFE,
 0px 1px 1px 1px #D2D2D2;
-webkit-transition: all 0.2s linear;
-moz-transition: all 0.2s linear;
-o-transition: all 0.2s linear;
transition: all 0.2s linear;
}
.register{
width: 40%;
margin-left:120px;
}
.registerDiv{
height:200px;
text-align:center;
}
.registerDiv form{
	display:inline-block;
	width:210px;
	margin-top: 30px;
}

#registerError,#loginError{
color:red;
width:200px;
text-align:center;
}
.remindDiv{
text-align:center;
height:100px;
}
.remindDiv form{
	display:inline-block;
	margin-top: 30px;
}
.remindDiv form p{
	text-align:center;
	font-size:30px;
	color: black;
    font-family: Microsoft Yahei;
}
#textError{
color:red;
font-size:18px;
text-align:center;
}